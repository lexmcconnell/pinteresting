<div class="textcolorwhite">

      <h1>All Pins</h1>

      <table class='table table-condensed'>
        <thead>
          <tr>
            <th>Image</th>
            <th>Description</th>
            <th>User</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @pins.each do |pin| %>
            <tr>
              <td><%= link_to image_tag pin.image.url :medium  %></td>
              <td><%= link_to pin.description, pin, class: 'textcolorwhite' %></td>
              <td><%= pin.user.email if pin.user %></td>
              <% if pin.user == current_user %>
              <td><%= link_to 'Edit', edit_pin_path(pin), class: 'textcolorwhite' %></td> 
              <td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'textcolorwhite' %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <% if user_signed_in? %>
        <%= link_to 'New Pin', new_pin_path, class: "btn btn-danger btn-lg" %>
      <% end %>
</div>
